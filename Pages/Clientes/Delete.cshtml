@page "{id:int?}"
@model Desafio_SistemaCadastro_ThomasGergDoBrasil._0__Apresentacao.Pages.Clientes.DeleteModel
@{
    ViewData["Title"] = "Deletar Cliente";
}

<h2>Deletar Cliente</h2>

<p>
    Tem certeza de que deseja deletar este cliente?
</p>
<hr />

@if (Model.Cliente != null)
{
    <div>
        <h4>Cliente</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Nome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente.Logotipo)
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Cliente.Logotipo))
                {
                    <img src="@Model.Cliente.Logotipo" alt="Logotipo" class="img-thumbnail" style="max-height: 100px;" />
                }
                else
                {
                    <p>Nenhum logotipo cadastrado.</p>
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente.Logradouros)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Cliente.Logradouros != null && Model.Cliente.Logradouros.Any())
                {
                    <ul>
                        @foreach (var logradouro in Model.Cliente.Logradouros)
                        {
                            <li>@logradouro.Endereco</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Nenhum logradouro cadastrado.</p>
                }
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Cliente.ClienteId" />
            <input type="submit" value="Deletar" class="btn btn-danger" />
            <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
}
else
{
    <p>Cliente não encontrado.</p>
    <a asp-page="./Index" class="btn btn-secondary">Voltar para a lista</a>
}